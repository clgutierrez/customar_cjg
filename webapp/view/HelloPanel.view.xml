<mvc:view controllerName="dttgroup.SAPUI5.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
	<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Button id="helloDialogButton" icon="sap-icon://globe" text="{i18o>openDialogButtonText}" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
			<Button text="{i18o>showHelloButtonText}" press=".onMostrarHola" class="sapUiSmallMarginEnd"/>
			<Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
			<Text text="Hola {/recipient/name}" class="sapUiSmallMargin myCustomtext sapTheminglight-asColor"/>
		</content>
	</Panel>
	<core:Fragment fragmentName="dttgroup.SAPUI5.view.Form01" type="XML"/>
</mvc:view>